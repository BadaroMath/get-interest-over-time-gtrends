# Google Trends Analyzer Configuration

# Google Cloud Settings
GOOGLE_CLOUD_PROJECT=your-project-id
BIGQUERY_DATASET=trends_data
BIGQUERY_LOCATION=US

# Authentication (choose one)
# Option 1: Service Account Key File
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# Option 2: Service Account Key JSON (for containerized environments)
# GOOGLE_CREDENTIALS_JSON={"type": "service_account", ...}

# Application Settings
TRENDS_CACHE_DIR=./cache
LOG_LEVEL=INFO
LOG_FILE=trends_analyzer.log

# Default Analysis Settings
DEFAULT_GEO=US
DEFAULT_TIMEFRAME=today 3-m
RETRY_ATTEMPTS=5
REQUEST_TIMEOUT=30

# Export Settings
DEFAULT_EXPORT_FORMAT=csv
INCLUDE_METADATA=true
TIMESTAMP_COLUMNS=true

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=60
DELAY_BETWEEN_REQUESTS=1

# Development Settings (for development only)
DEBUG=false
ENABLE_CACHE=true
MOCK_RESPONSES=false